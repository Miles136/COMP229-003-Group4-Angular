<%- include ../partials/header.ejs %>

    <!-- Content for the Add_Edit page -->
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1>
                    {{ title }}
                </h1>

                <form class="form" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="id" value="{{ Survey._id }}">
                        <label for="surveyTextField">Name</label>
                        <input type="text" class="form-control" id="surveyTextField" value="<%= Survey.Name %>"
                            name="Name">
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="surveyTextField">Description</label>
                        <input type="" class="form-control" id="surveyTextField" placeholder="Enter the Description"
                            name="Description" value="{{ Survey.Description }}" >
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="surveyTextField">Question1</label>
                        <input type="text" class="form-control" id="surveyTextField"
                            placeholder="<%= Survey.Question1 %>" name="Question1" required>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="surveyTextField">Question2</label>
                        <input type="text" class="form-control" id="surveyTextField"
                            placeholder="<%= Survey.Question2 %>" name="Question2" required>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="surveyTextField">Question3</label>
                        <input type="text" class="form-control" id="surveyTextField"
                            placeholder="<%= Survey.Question3 %>" name="Question3" required>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i>
                            Submit
                        </button>

                        <a href="/survey/list" class="btn btn-warning">
                            <i class="fas fa-undo"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include ../partials/footer.ejs %>